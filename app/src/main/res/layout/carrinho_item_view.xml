<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_card_background"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/cartImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/call_of_souls"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/cartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do produto"
        android:layout_toEndOf="@id/cartImage"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PreÃ§o do produto"
        android:layout_toEndOf="@id/cartImage"
        android:layout_below="@id/cartName"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/cartVendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendedor do produto"
        android:layout_toEndOf="@id/cartImage"
        android:layout_below="@id/cartPrice"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/cartComprar"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/cartVendor"
        android:layout_toEndOf="@id/cartImage"
        android:text="Comprar"
        android:layout_margin="5dp" />

    <ImageButton
        android:id="@+id/cartDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_delete_24"
        android:scaleType="centerCrop"
        android:background="@drawable/invisible_border"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_below="@id/cartComprar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#6F6F6F" />

</RelativeLayout>