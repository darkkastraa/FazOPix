<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome"
        android:layout_toEndOf="@+id/imageview"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        tools:text="Nome Produto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preco"
        android:layout_toEndOf="@+id/imageview"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/nome"
        android:textColor="@color/black"
        tools:text="PreÃ§o Produto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vendedor"
        android:layout_toEndOf="@+id/imageview"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/preco"
        android:textColor="@color/black"
        tools:text="Nome Vendedor"
        />

    <Button
        android:id="@+id/buttonComprar"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="@id/buttonCarrinho"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:text="Comprar" />

    <ImageButton
        android:id="@+id/buttonCarrinho"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageview"
        android:layout_alignParentEnd="@id/buttonFavorito"
        android:background="@drawable/invisible_border"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/shopcart"
        android:scaleType="centerCrop"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:layout_toEndOf="@+id/buttonComprar" />

    <ImageButton
        android:id="@+id/buttonFavorito"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageview"
        android:layout_alignParentEnd="true"
        android:background="@drawable/invisible_border"
        android:layout_marginEnd="2dp"
        android:src="@drawable/star"
        android:scaleType="centerCrop"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:layout_toEndOf="@+id/buttonCarrinho" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/buttonComprar"
        android:background="@color/black"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        />
</RelativeLayout>