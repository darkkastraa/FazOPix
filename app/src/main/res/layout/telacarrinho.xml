<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutReload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/yellow"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/voltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Voltar"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_left" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/search_bar"
            android:hint="Pesquise aqui..."
            android:paddingStart="10dp"
            android:visibility="invisible"
            android:paddingEnd="5dp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Pesquisar"
            android:gravity="center"
            android:visibility="invisible"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/magicon" />

        <ImageButton

            android:id="@+id/cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Carrinho"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shopcart" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Usuário"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usericon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parece que não há nada aqui.\nQue tal ir às compras?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="times"
            android:layout_margin="30dp"/>
        <Button
            android:id="@+id/buttonExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/buttonCompra"
        android:layout_below="@id/linearLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/buttonCompra"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Fechar Carrinho"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center" />

</RelativeLayout>