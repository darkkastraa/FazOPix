<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/voltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Voltar"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_left">
        </ImageButton>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/search_bar"
            android:hint="Pesquise aqui..."
            android:visibility="invisible"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black">

        </EditText>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Pesquisar"
            android:gravity="center"
            android:visibility="invisible"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/magicon">

        </ImageButton>

        <ImageButton
            android:id="@+id/cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3px"
            android:background="@drawable/invisible_border"
            android:contentDescription="Carrinho"
            android:padding="9px"
            android:scaleType="centerCrop"
            android:src="@drawable/shopcart">

        </ImageButton>

        <ImageButton
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/invisible_border"
            android:contentDescription="Voltar"
            android:padding="4px"
            android:scaleType="centerCrop"
            android:src="@drawable/usericon">

        </ImageButton>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:elevation="-2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageButton
                android:id="@+id/perfilPic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@color/black"
            android:layout_below="@id/perfilPic"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/nomeField"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/line"
            android:layout_marginStart="10dp"
            android:layout_alignBaseline="@+id/nomeField"/>

        <EditText
            android:id="@+id/nomeField"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/line"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/emailField"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nomeField"
            android:layout_marginStart="10dp"
            android:layout_alignBaseline="@+id/emailField"/>

        <EditText
            android:id="@+id/emailField"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/nomeField"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/passField"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nomeField"
            android:layout_marginStart="10dp"
            android:layout_alignBaseline="@+id/passField"/>

        <EditText
            android:id="@+id/passField"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/emailField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/passwordToggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/emailField"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/passField"
            android:background="@drawable/invisible_border"
            android:src="@drawable/baseline_visibility_24" />

        <LinearLayout
            android:id="@+id/linearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/passField"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/atualizarButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ATUALIZAR"
                />

            <Button
                android:id="@+id/sairButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SAIR"
                />
        </LinearLayout>

            <TextView
                android:id="@+id/wlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de favoritos"
                android:layout_below="@id/linearButton"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="20sp"
                android:layout_marginBottom="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wlRecycler"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_below="@id/wlText"/>

            <TextView
                android:id="@+id/uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UID: "
                android:layout_below="@id/wlRecycler"
                android:gravity="center"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feito por: Raphael L. Siqueira"
                android:layout_below="@id/uid"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="times"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>